{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block stylesheets %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
{% endblock %}
{% block body %}


    <div class="example-wrapper">
        <h1>Hello {{ name }}</h1>

        <form id="formInput_" method="post" action="{{ path('app_ajax_form_save') }}">
            <input name="name" id="name" type="text">
            <input name="password" type="password">
            <button type="submit">GÃ¶nder</button>
        </form>
    </div>

    <div id="response_"></div>
{% endblock %}

{% block javascripts %}
    <script>
        //alert('');
        $(document).ready(function() {
            //alert('');
            $('#formInput_').on('submit', function (e) {
                e.preventDefault();
                //alert();
                ajaxRequest('formInput');
            });

        });

        function ajaxRequest(formId) {
            $.ajax({
                type: $('#'+formId).attr('method'),
                url: $('#formInput_').attr('action'),
                data: { "name":$('#name').val() },
                dataType: 'json'
            }).done(function (xhr) {
                //$('.loading_'+chart).css('display', 'none');
                console.log(xhr);

                if (xhr.status) {
                    alert(xhr.message);
                    $('#response_').html(xhr.results.data1);
                }
                else {
                    alert(xhr.message);
                }
            }).fail(function (xhr) {
                //$('.loading_'+chart).css('display', 'none');
                Swal.fire({
                    title: 'Error!',
                    text: xhr.responseText,
                    icon: 'error'
                })
            });
        }
    </script>
{% endblock %}